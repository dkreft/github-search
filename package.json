{
  "name": "github-search",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --fix --ext .js,.jsx",
    "start": "next start",
    "test": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test:coverage"
    }
  },
  "dependencies": {
    "next": "9.5.2",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@apollo/client": "^3.1.4",
    "@zeit/next-sass": "^1.0.1",
    "babel-eslint": "^10.1.0",
    "bdd-lazy-var": "^2.5.4",
    "bufferutil": "^4.0.1",
    "canvas": "^2.6.1",
    "classnames": "^2.2.6",
    "dotenv": "^8.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-react-perf": "^3.2.4",
    "fibers": "^5.0.0",
    "graphql": "^15.3.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.2.2",
    "jest-enzyme": "^7.1.2",
    "next-auth": "^3.1.0",
    "next-images": "^1.4.1",
    "node-sass": "^4.14.1",
    "sass": "^1.26.10",
    "typeface-open-sans": "0.0.75",
    "utf-8-validate": "^5.0.2"
  },
  "jest": {
    "clearMocks": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/.*index.js",
      "<rootDir>/test/"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2|svg)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/test/setupJestEnv.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupJest.js"
    ]
  }
}
